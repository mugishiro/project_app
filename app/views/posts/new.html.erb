<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">質問する</h1>

      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <textarea name="content"><%= @post.content %></textarea>
          <input type="submit" class="modal-syncer" data-target="modal-content-post" value="質問する">
        </div>
      </div>
      
  </div>
</div>
